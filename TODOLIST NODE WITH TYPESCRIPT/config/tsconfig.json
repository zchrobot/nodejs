{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "../dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es7", "dom"],
    "jsx": "react",
    "strict": true,
    "strictNullChecks": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}